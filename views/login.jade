


doctype html

html
    head
        title Register
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="shortcut icon", href="/img/logo.png", type="image/x-icon")
        script(src="/js/jquery-3.5.1.min.js")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/css/home.css')
        link(rel='stylesheet', href='/css/components/footer.css')
    body
        //- include partials/messages
        -if(errors || success_msg || error_msg || error){
            .errors-area
                -if(errors){
                    -for(var i=0; i<errors.length; i++){
                        .error(id='error#{i}')
                            i.fa.fa-warning
                            h1= errors[i].msg
                            i.fa.fa-times.close-error
                            .time-interval(id='time#{i}')
                    -}
                -}
                -if(success_msg != ''){
                    .error.green-error(id='error3')
                        i.fa.fa-check
                        h1= success_msg
                        i.fa.fa-times.close-error
                        .time-interval(id='time3')
                -}
                -if(error_msg != ''){
                    .error(id='error4')
                        i.fa.fa-warning
                        h1= error_msg
                        i.fa.fa-times.close-error
                        .time-interval(id='time4')
                -}
                -if(error != ''){
                    .error(id='error5')
                        i.fa.fa-warning
                        h1= error
                        i.fa.fa-times.close-error
                        .time-interval(id='time5')
                -}
        -}
        .reg-area
            .image
                img(src="/img/users/bg-2.jpg", alt="")
            .register
                h1 ورود
                h2 برای ورود شماره موبایل خود را وارد نمایید
                form(action="/users/login" id="register" method="POST")
                    .text-input-area
                        input.textinput(type="text" placeholder="کد ملی" name="username" value= "#{ typeof uname != 'undefined' ? uname: '' }")
                        i.fa.fa-user
                    .text-input-area
                        input.textinput(type="password" placeholder="رمز عبور" name="password" value= "#{ typeof psw != 'undefined' ? psw: '' }")
                        i.fa.fa-key
                    .text-input-area
                        button.submit(type="submit") ورود
                    a.link(href="/users/register") هنوز ثبت نام نکرده اید؟
        script(src="/js/users.js")