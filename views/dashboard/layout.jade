doctype html

html
    head
        title آکادمی فناورانه 
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="shortcut icon", href="/img/logo.png", type="image/x-icon")
        script(src="/js/jquery-3.5.1.min.js")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        //- meta(name="theme-color" content="#050507")
        //- script(src="/js/index.js")
        link(rel="stylesheet", href="/css/dashboard/dashboard-layout.css")
        link(rel="stylesheet", href="/css/components/footer.css")
        link(rel="stylesheet", href="/css/components/navbar.css")
        link(rel="stylesheet", href="/css/components/register.css")
        link(rel="stylesheet", href="/css/components/messages.css")
        block styles
    body
        .black-modal

        include ../components/messages
        include ../components/navbar
        .dashboard
            .side-bar 
                .valet
                    i.fa.fa-credit-card 
                    .info   
                        h1 موجودی کیف پول
                        h2 #{user.card} تومان
                .links
                    -if(user.role == 'user'){
                        a#link1(href="/dashboard") 
                            i.fa.fa-user
                            | داشبورد
                        a#link2(href="#") 
                            i.fa.fa-book
                            | دوره‌های من
                        a#link3(href="#") 
                            i.fa.fa-shopping-cart
                            | سفارشات
                        a#link4(href="#") 
                            i.fa.fa-dollar
                            | فاکتورها
                        a#link5(href="/dashboard/setting") 
                            i.fa.fa-gear
                            | تنظیمات
                    -}else if(user.role == 'admin'){
                        a#link1(href="/dashboard") 
                            i.fa.fa-user
                            | داشبورد
                        a#link2(href="/course") 
                            i.fa.fa-book
                            | دوره ها
                        a#link3(href="/dashboard/users") 
                            i.fa.fa-shopping-cart
                            | کاربران
                        a#link4(href="#") 
                            i.fa.fa-dollar
                            | فاکتورها
                        a#link5(href="/dashboard/setting") 
                            i.fa.fa-gear
                            | تنظیمات
                        a#link5(href="/dashboard/home-setting") 
                            i.fa.fa-gear
                            | تنظیمات صفحه اصلی
                    -}
            .content-area
                -if(editing)
                    include ../components/edit-user
                -else if(!user.completed)
                    include ../components/complete-info
                -else
                    include ../components/user-info
            block content
        include ../components/footer
        script(src="/js/numberFixer.js") 
