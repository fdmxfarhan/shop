-if(errors || success_msg || error_msg || error){
    .errors-area
        -if(errors){
            -for(var i=0; i<errors.length; i++){
                .error(id='error#{i}')
                    i.fa.fa-warning
                    h1= errors[i].msg
                    i.fa.fa-times.close-error
                    .time-interval(id='time#{i}')
            -}
        -}
        -if(success_msg != ''){
            .error.green-error(id='error3')
                i.fa.fa-check
                h1= success_msg
                i.fa.fa-times.close-error
                .time-interval(id='time3')
        -}
        -if(error_msg != ''){
            .error(id='error4')
                i.fa.fa-warning
                h1= error_msg
                i.fa.fa-times.close-error
                .time-interval(id='time4')
        -}
        -if(error != ''){
            .error(id='error5')
                i.fa.fa-warning
                h1= error
                i.fa.fa-times.close-error
                .time-interval(id='time5')
        -}
-}

script(src="/js/users.js")

